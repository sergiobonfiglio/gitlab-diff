{
	"scripts": {
		"web-ext:run": "web-ext run --source-dir ./dist",
		"web-ext:build": "npm clean:build && rimraf web-ext-artifacts && web-ext build --source-dir ./dist",
		"clean": "rimraf dist",
		"build": "node esbuild/build.mjs",
		"watch": "node esbuild/watch.mjs",
		"clean:build": "npm run clean && npm run build",
		"dev": "npm run clean:build && concurrently -k \"npm:watch\" \"npm:web-ext:run\""
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.1",
		"@types/firefox-webext-browser": "^120.0.3",
		"@types/webextension-polyfill": "^0.10.7",
		"concurrently": "^8.2.2",
		"esbuild": "0.21.4",
		"esbuild-plugin-copy-watch": "^2.1.0",
		"typescript": "^5.4.5",
		"web-ext": "^7.0.0"
	},
	"dependencies": {
		"webextension-polyfill": "^0.12.0"
	}
}
