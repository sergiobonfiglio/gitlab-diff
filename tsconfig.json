{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"typeRoots": ["./node_modules/@types"],
		"types": ["firefox-webext-browser"],
		"isolatedModules": true,
		"lib": ["dom", "es6"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
